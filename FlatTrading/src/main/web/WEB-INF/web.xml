<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

   <!-- <filter>
        <filter-name>AddFlatFilter</filter-name>
        <filter-class>ServletFilter.AddFlatFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AddFlatFilter</filter-name>
        <servlet-name>AddFlat</servlet-name>
    </filter-mapping>-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlatServlet</servlet-name>
        <servlet-class>Servlets.FlatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFlat</servlet-name>
        <servlet-class>Servlets.AddFlatServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrateServlet</servlet-name>
        <servlet-class>Servlets.RegistrateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FlatServlet</servlet-name>
        <url-pattern>/flat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>AddFlat</servlet-name>
    <url-pattern>/addflat</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrateServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

</web-app>